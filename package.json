{
  "name": "termlauncher",
  "version": "2.0.0",
  "description": "TermLauncher - 快速開啟終端進入指定目錄",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable",
    "build:installer": "electron-builder --win nsis",
    "build:all": "npm run build && npm run build:installer",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "author": "User",
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^24.9.1",
    "prettier": "^3.8.1",
    "vitest": "^3.0.0"
  },
  "build": {
    "appId": "com.termlauncher.app",
    "productName": "TermLauncher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "portable": {
      "artifactName": "TermLauncher-Portable.exe"
    }
  }
}
